<%- include ("includes/header") %>

   <script type="text/javascript">
      function fileSelected() {
         var fileName = document.getElementById("file").files[0].name;
         document.getElementById("filename").innerHTML = fileName;
      }
   </script>

   <div class="upload-section">
      <div class="container-fluid pt-5 pb-5" id="video-upload-container">
         <div class="row">
            <h3 style="color: #dedede; margin-bottom: 30px;">Upload your video</h3>
            <form method="POST" action="/upload-video" enctype="multipart/form-data">
               <div class="col-md-12 group">
                  <div class="row">
                     <div class="col-sm-5" style="margin-right: 30px;">
                        <div class="form-group">
                           <label for="video">Select video</label>
                           <input type="file" class="form-control" accept="video/mp4,video/*" name="video" required>
                        </div>
                     </div>
                     <div class="col-sm-5">
                        <div class="form-group">
                           <label for="thumbnail">Select thumbnail</label>
                           <input type="file" class="form-control" name="thumbnail" accept="image/*" required>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-12" style="margin-top: 20px;">
                     <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" class="form-control" required>
                     </div>
                  </div>
               </div>
               <div class="row">
                  <div class="form-group">
                     <label for="description">Description</label>
                     <textarea type="text" name="description" rows="3" class="form-control"></textarea>
                  </div>
               </div>
               <div class="row">
                  <div class="form-group">
                     <label for="tags">Tags</label>
                     <input type="text" name="tags" class="form-control">
                  </div>
               </div>
               <div class="row">
                  <div class="form-group">
                     <label for="category">Category</label>
                     <select name="category" class="form-control">
                        <option value="">Select category</option>
                        <option value="Technology">Technology</option>
                        <option value="Gaming">Gaming</option>
                        <option value="Education">Education</option>
                        <option value="Unboxing">Unboxing</option>
                        <option value="Challenge">Challenge</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Vlogs">Vlogs</option>
                        <option value="How-To">How-To</option>
                        <option value="Product Review">Product Review</option>
                     </select>
                  </div>
               </div>
               <input type="submit" class="btn btn-outline-primary" style="margin-top: 30px; text-align: center;"
                  value="Upload Video">


            </form>

         </div>
      </div>
   </div>


   <%- include ("includes/footer") %>